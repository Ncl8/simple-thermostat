{
  "name": "simple-thermostat",
  "version": "0.42.0",
  "description": "A different take on the thermostat card for Home Assistant Lovelace UI",
  "main": "dist/index.js",
  "repository": "git@github.com:nervetattoo/simple-thermostat.git",
  "author": "Raymond Julin <raymond.julin@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@types/node": "^14.14.37",
    "debounce-fn": "^5.0.0",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.12.10",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@size-limit/file": "^4.10.1",
    "@types/jest": "^26.0.22",
    "@types/lodash.isequal": "^4.5.5",
    "ava": "^3.13.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "release-it": "^14.2.2",
    "rollup": "^2.32.0",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-minify-html-literals": "^1.2.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-postcss-lit": "^1.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^4.10.1",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "release": "release-it",
    "test": "jest",
    "build": "cross-env NODE_ENV=production rollup -c",
    "dist": "yarn build && cp simple-thermostat.js $HA_MOUNT/www/simple-thermostat.js",
    "dev": "concurrently 'npm:dev:*'",
    "dev:build": "tsc --watch",
    "dev:test": "jest --watch",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "simple-thermostat.*"
      ]
    },
    "hooks": {
      "before:init": "yarn build",
      "after:release": "rm simple-thermostat.js"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "15 KB"
    }
  ],
  "ava": {
    "babel": {
      "compileAsTests": [
        "src/**/*"
      ]
    }
  }
}
